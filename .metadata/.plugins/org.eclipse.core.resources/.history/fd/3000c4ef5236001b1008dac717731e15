package net.ddns.lukashuth.utils;

import java.io.File;

import org.bukkit.configuration.file.YamlConfiguration;

public class Config {
	
	private File file;
	
	private YamlConfiguration config;
	
	public Config()
	{
		File dir = new File("./plugins/bp/");
		if(!dir.exists()) {
			dir.mkdirs();
		}
		
		file = new File(dir, "config.yml");
		if(!file.exists()) {
			file.createNewFile();
		}
	}
	
	
}
